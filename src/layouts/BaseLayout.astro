---
const { title = "nonica | website" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body>
    <main class="container">
      <slot />
    </main>
  </body>
</html>

<style>
  :root {
    --bg: #edf1f8;
    --fg: #1f2937; /* gray-800 */
    --muted: #6b7280; /* gray-500 */
    --accent: #4578e7; /* blue-600 */
    --border: #d4dae4c9; /* gray-200 */
    --card: #ffffff;
    --radius: 12px;
  }

  body {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
    background: var(--bg);
    color: var(--fg);
    line-height: 1.6;
  }
  .container {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }
</style>
