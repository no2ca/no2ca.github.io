---
const { title = "nonica | website" } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>

    <body>
        <main class="container">
            <slot />
        </main>
    </body>
</html>

<style>
    body {
        margin: 0;
        font-family: system-ui, -apple-system, sans-serif;
        background: #fafafa;
        color: #222;
    }
    .container {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
    }
</style>