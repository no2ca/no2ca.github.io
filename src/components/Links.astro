---
export interface Props {
  links: { name: string; url: string }[];
}
const { links } = Astro.props;
---

<section>
  <h2>Links</h2>
  <ul>
    {
      links.map((link) => (
        <li>
          <a href={link.url} target="_blank">
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }

  a {
    padding: 0.4rem 0.7rem;
    border: 1px solid var(--border);
    border-radius: 999px;
    font-size: 0.85rem;
    color: var(--fg);
    text-decoration: none;
  }

  a:hover {
    border-color: var(--accent);
  }
</style>
