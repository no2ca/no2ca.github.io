---
export interface Props {
  myIcon: any;
  name: any;
}
const { myIcon, name } = Astro.props;
---

<section class="profile-card">
  <div class="avatar">
    <img src={myIcon.src} alt="Profile icon" />
  </div>

  <div class="content">
    <div class="header">
      <div>
        <h1>{name}</h1>
        <p class="muted">Last updated: 2026-01</p>
      </div>
    </div>
  </div>
</section>

<style>
  .profile-card {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    text-align: center;
    gap: 1.25rem;
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    margin-bottom: 2rem;
    box-shadow: 0 0px 8px rgba(0, 0, 0, 0.06);
  }

  .avatar {
    display: flex;
    justify-content: center;
    justify-self: center;
  }

  .avatar img {
    width: 144px;
    height: 144px;
    border-radius: 50%;
    border: 1px solid var(--border);
    object-fit: cover;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .header h1 {
    margin: 0;
    letter-spacing: -0.01em;
    font-size: 1.8rem;
  }

  .muted {
    margin: 0.25rem 0 0;
    color: var(--muted);
    font-size: 0.9rem;
  }

  .description {
    margin: 0.2rem 0 0.6rem;
  }

  .interests h2 {
    margin: 0 0 0.35rem;
    font-size: 1.05rem;
  }

  @media screen and (max-width: 680px) {
    .profile-card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .content {
      align-items: center;
    }

    .avatar img {
      width: 128px;
      height: 128px;
    }
  }
</style>
